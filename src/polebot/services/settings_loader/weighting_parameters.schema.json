{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/bwcc-clan/polebot/blob/main/src/polebot/services/settings_loader/weighting_parameters.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$id": {
      "type": "string",
      "format": "uri-reference"
    },
    "$schema": {
      "type": "string",
      "format": "uri"
    },
    "groups": {
      "$ref": "#/$defs/map_groups"
    },
    "environments": {
      "$ref": "#/$defs/environmentGroups"
    }
  },
  "required": ["environments", "groups"],
  "title": "Weighting Parameters",
  "$defs": {
    "environmentGroups": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/environmentGroup"
      },
      "propertyNames": {
        "pattern": "^[a-zA-Z0-9_]+$",
        "maxLength": 50
      },
      "minProperties": 1,
      "title": "Environment Groups",
      "description": "Groups of map environments with relative weights and repeat decay."
    },
    "environmentGroup": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "weight": {
          "$ref": "#/$defs/weight"
        },
        "repeat_decay": {
          "$ref": "#/$defs/repeatDecay"
        },
        "environments": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/environmentType"
          },
          "title": "Environments",
          "description": "The list of map environments in this group.",
          "minItems": 1
        }
      },
      "required": ["environments", "repeat_decay", "weight"],
      "title": "Environment Group",
      "description": "Map environments are divided into groups with common weighting parameters."
    },
    "map_groups": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/map_group"
      },
      "propertyNames": {
        "pattern": "^[a-zA-Z0-9_]+$",
        "maxLength": 50
      },
      "minProperties": 1,
      "title": "Map Groups",
      "description": "Maps are divided into named groups that share common weighting parameters."
    },
    "map_group": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "weight": {
          "$ref": "#/$defs/weight"
        },
        "repeat_decay": {
          "$ref": "#/$defs/repeatDecay"
        },
        "maps": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/mapName"
          },
          "title": "Maps",
          "description": "The list of maps in this group.",
          "minItems": 1
        }
      },
      "required": ["maps", "repeat_decay", "weight"],
      "title": "Map Group",
      "description": "A group of maps with common weighting parameters."
    },
    "weight": {
      "type": "integer",
      "title": "Relative Weight",
      "description": "The relative initial weight of this group compared to others. A higher value means an entry from this group is more likely to be selected by the algorithm.",
      "minimum": 0,
      "maximum": 100,
      "examples": [50, 80]
    },
    "repeatDecay": {
      "type": "number",
      "title": "Repeat Decay",
      "description": "The decay factor for this group that applies when the second and subsequent map choices are generated by the algorithm. A higher value means an entry from this group is more likely to be chosen repeatedly.",
      "minimum": 0,
      "maximum": 1,
      "examples": [0.5, 0.1]
    },
    "mapName": {
      "type": "string",
      "title": "Map Name",
      "description": "The name of a map.",
      "maxLength": 50,
      "pattern": "^[a-zA-Z0-9_]+$",
      "examples": [
        "carentan",
        "omahabeach",
        "stmariedumont",
        "stmereeglise",
        "utahbeach"
      ]
    },
    "environmentType": {
      "type": "string",
      "title": "Map Environment",
      "enum": ["dawn", "day", "dusk", "night", "overcast", "rain"]
    }
  }
}
